<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    {# prettier-ignore-start #}
    <title>{% block title %}{% endblock %}| Site Name</title>
    {# prettier-ignore-end #}
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=5.0"
    />
    <meta name="description" content="Set a proper description" />

    {% block stylesheets %}
      <link rel="stylesheet" href="{{ STATIC_PATH }}/css/styles.css" />
      <link rel="stylesheet" href="{{ STATIC_PATH }}/css/tailwind.css" />
    {% endblock %}
  </head>
  <body>
    {% svg_sprite %}

    {% block content %}
    {% endblock %}

    {% block scripts %}
      <script src="{{ STATIC_PATH }}/js/bundle.js"></script>
    {% endblock %}
  </body>
</html>
